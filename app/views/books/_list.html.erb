<h2>Books</h2>
            <table class="table table-borderd-bottom">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <td>
                            <%= attachment_image_tag book.user, :profile_image, :fill, 40 , 40 , format: 'jpeg', class: "  profile-img", fallback: "no_image.jpg" , size:'40x40'%>
                        </td>
                        <td>
                            <span><%= link_to book.title, book_path(book) %></span>
                        </td>
                        <td>
                        <span><%= book.body %></span>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>