<h2>User info</h2>
		<table class="table table-borderd-bottom">
			<tbody>
				<th>
    		<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "  profile-img", fallback: "no_image.jpg" %>
    			</th>
			<tr>
				<th>name</th>
				<th><%= @user.name %></th>
			</tr>
			<tr>
		    	<th>Introduction</th>
		    	<th><%= @user.introduction %></th>
	    	</tr>
	    	</tbody>
		</table>
    	<div>
    <% if @user.id == current_user.id %>

        <%= link_to edit_user_path(@user) ,class: "btn btn-block btn-default"  do %>
         <i class="fas fa-wrench"></i>
			<% end %>
         <% else %>
         <%= link_to user_path(current_user) ,class: "btn btn-block btn-default"  do %>
         <i class="fas fa-wrench"></i>
         <% end %>
    <% end %>

    
	</div>