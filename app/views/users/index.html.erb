<div class="container">
	<div class="row">
		<div class="col-xs-3">
<%= render 'users/info', user: @user %>
<%= render 'books/new', book: @book %>
		</div>
		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table-borderd-bottom">
				<thead>
					<tr>
						<th>
							<span>image</span>
						</th>
						<th>
							<span>name</span>
						</th>
						<th></th>
					</tr>
				</thead>
				<% @users.each do |user| %>
				<tbody>
					<tr>
						<td>
                            <%= attachment_image_tag user, :profile_image, :fill, 40 , 40 , format: 'jpeg', class: "  profile-img", fallback: "no_image.jpg" , size:'40x40'%>
                        </td>
						<td>
							<span><%= user.name %></span>
						</td>

						<td>
							<%= link_to"Show", user_path(user) %>

						</td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>